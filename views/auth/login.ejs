<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In - <%= storeInfo?.businessName || 'AI Recruiting Assistant' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary-color: <%= branding?.primaryColor || '#0d9488' %>;
      --secondary-color: <%= branding?.secondaryColor || '#0f766e' %>;
      --accent-color: <%= branding?.accentColor || '#14b8a6' %>;
    }

    * {
      font-family: '<%= branding?.bodyFont || 'Inter' %>', sans-serif;
    }

    body {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 2rem 0;
    }

    .auth-container {
      width: 100%;
      max-width: 900px;
      margin: 0 auto;
    }

    .auth-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 25px 50px rgba(0,0,0,0.25);
      overflow: hidden;
      display: flex;
      min-height: 600px;
    }

    .auth-brand {
      background: linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.2) 100%);
      padding: 3rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      width: 40%;
      position: relative;
      overflow: hidden;
    }

    .auth-brand::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(ellipse, rgba(255,255,255,0.1) 0%, transparent 50%);
    }

    .auth-brand-content {
      position: relative;
      z-index: 1;
      color: white;
    }

    .auth-brand h1 {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .auth-brand p {
      opacity: 0.9;
      line-height: 1.6;
    }

    .brand-features {
      margin-top: 2rem;
    }

    .brand-feature {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1rem;
      color: rgba(255,255,255,0.9);
    }

    .brand-feature i {
      font-size: 1.25rem;
      color: #22c55e;
    }

    .auth-form-container {
      flex: 1;
      padding: 3rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .auth-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .auth-header h2 {
      font-size: 1.75rem;
      font-weight: 700;
      color: #111827;
      margin-bottom: 0.5rem;
    }

    .auth-header p {
      color: #6b7280;
    }

    .form-label {
      font-weight: 500;
      color: #374151;
    }

    .form-control {
      padding: 0.75rem 1rem;
      border-radius: 10px;
      border: 1.5px solid #e5e7eb;
      transition: all 0.2s;
    }

    .form-control:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.1);
    }

    .input-group-text {
      background: #f9fafb;
      border: 1.5px solid #e5e7eb;
      border-right: none;
      border-radius: 10px 0 0 10px;
      color: #6b7280;
    }

    .input-group .form-control {
      border-left: none;
      border-radius: 0 10px 10px 0;
    }

    .password-toggle {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      z-index: 10;
      color: #6b7280;
      transition: color 0.2s;
    }

    .password-toggle:hover {
      color: var(--primary-color);
    }

    .btn-primary {
      background: var(--primary-color);
      border-color: var(--primary-color);
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      border-radius: 10px;
      transition: all 0.2s;
    }

    .btn-primary:hover {
      background: var(--secondary-color);
      border-color: var(--secondary-color);
      transform: translateY(-1px);
    }

    .divider {
      display: flex;
      align-items: center;
      text-align: center;
      margin: 1.5rem 0;
      color: #9ca3af;
      font-size: 0.875rem;
    }

    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      border-bottom: 1px solid #e5e7eb;
    }

    .divider span {
      padding: 0 1rem;
    }

    .btn-oauth {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      padding: 0.75rem;
      font-weight: 500;
      border-radius: 10px;
      transition: all 0.2s;
    }

    .btn-oauth:hover {
      transform: translateY(-1px);
    }

    /* Demo Users */
    .demo-users {
      background: #f0fdfa;
      border: 1px solid #99f6e4;
      border-radius: 12px;
      padding: 1rem;
      margin-bottom: 1.5rem;
    }

    .demo-users-title {
      font-size: 0.8rem;
      font-weight: 600;
      color: var(--primary-color);
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .demo-user-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 0.75rem;
      background: white;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
      margin-bottom: 0.5rem;
      cursor: pointer;
      transition: all 0.2s;
      width: 100%;
      text-align: left;
    }

    .demo-user-btn:hover {
      border-color: var(--primary-color);
      background: #f0fdfa;
    }

    .demo-user-role {
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      color: var(--primary-color);
    }

    .demo-user-email {
      font-size: 0.85rem;
      color: #374151;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #6b7280;
      text-decoration: none;
      font-size: 0.9rem;
      margin-bottom: 1rem;
      transition: color 0.2s;
    }

    .back-link:hover {
      color: var(--primary-color);
    }

    @media (max-width: 768px) {
      .auth-card {
        flex-direction: column;
        min-height: auto;
      }

      .auth-brand {
        width: 100%;
        padding: 2rem;
      }

      .auth-form-container {
        padding: 2rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="auth-container">
      <div class="auth-card">
        <!-- Brand Side -->
        <div class="auth-brand" style="background: linear-gradient(180deg, var(--primary-color) 0%, var(--secondary-color) 100%);">
          <div class="auth-brand-content">
            <a href="/RecruitingAI/" class="back-link text-white opacity-75">
              <i class="bi bi-arrow-left"></i> Back to Home
            </a>
            <h1><i class="bi bi-person-badge me-2"></i><%= storeInfo?.businessName || 'RecruitingAI' %></h1>
            <p><%= storeInfo?.tagline || 'Smart Hiring Made Simple' %></p>
            <div class="brand-features">
              <div class="brand-feature">
                <i class="bi bi-check-circle-fill"></i>
                <span>AI-Powered Interviews</span>
              </div>
              <div class="brand-feature">
                <i class="bi bi-check-circle-fill"></i>
                <span>24 Languages Supported</span>
              </div>
              <div class="brand-feature">
                <i class="bi bi-check-circle-fill"></i>
                <span>Advanced Analytics</span>
              </div>
              <div class="brand-feature">
                <i class="bi bi-check-circle-fill"></i>
                <span>MS Teams Integration</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Side -->
        <div class="auth-form-container">
          <div class="auth-header">
            <h2>Welcome Back</h2>
            <p>Sign in to your account to continue</p>
          </div>

          <!-- Alert for messages -->
          <div id="alertContainer">
            <% if (typeof registered !== 'undefined' && registered) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="bi bi-check-circle me-2"></i>Account created! Please check your email to verify, then sign in.
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>
            <% if (typeof verified !== 'undefined' && verified) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="bi bi-check-circle me-2"></i>Email verified successfully! You can now sign in.
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>
            <% if (typeof reset !== 'undefined' && reset) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <i class="bi bi-check-circle me-2"></i>Password reset successfully! You can now sign in with your new password.
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>
          </div>

          <!-- Demo Users Quick Login -->
          <div class="demo-users">
            <div class="demo-users-title">
              <i class="bi bi-lightning-charge-fill"></i> Quick Demo Login
            </div>
            <div class="row g-2">
              <div class="col-6">
                <button type="button" class="demo-user-btn" onclick="fillLogin('superadmin@system.local', 'superadmin123')">
                  <i class="bi bi-shield-fill text-danger"></i>
                  <div>
                    <div class="demo-user-role">Super Admin</div>
                  </div>
                </button>
              </div>
              <div class="col-6">
                <button type="button" class="demo-user-btn" onclick="fillLogin('admin@demo.local', 'admin123')">
                  <i class="bi bi-person-fill-gear text-primary"></i>
                  <div>
                    <div class="demo-user-role">Company Admin</div>
                  </div>
                </button>
              </div>
              <div class="col-6">
                <button type="button" class="demo-user-btn" onclick="fillLogin('manager@demo.local', 'manager123')">
                  <i class="bi bi-person-fill" style="color: var(--primary-color);"></i>
                  <div>
                    <div class="demo-user-role">Manager</div>
                  </div>
                </button>
              </div>
              <div class="col-6">
                <button type="button" class="demo-user-btn" onclick="fillLogin('supervisor@demo.local', 'supervisor123')">
                  <i class="bi bi-eye-fill text-purple" style="color: #7c3aed;"></i>
                  <div>
                    <div class="demo-user-role">Supervisor</div>
                  </div>
                </button>
              </div>
            </div>
          </div>

          <form id="loginForm" novalidate>
            <!-- Email or Username -->
            <div class="mb-3">
              <label for="identifier" class="form-label">Email or Username</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input type="text" class="form-control" id="identifier" name="identifier"
                       placeholder="you@company.com" required autofocus>
              </div>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <div class="input-group position-relative">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input type="password" class="form-control" id="password" name="password"
                       placeholder="Enter your password" required>
                <span class="password-toggle" onclick="togglePassword()">
                  <i class="bi bi-eye" id="passwordToggleIcon"></i>
                </span>
              </div>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Remember me</label>
              </div>
              <a href="/RecruitingAI/auth/forgot-password" class="text-decoration-none" style="color: var(--primary-color);">Forgot password?</a>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 py-2 mb-3" id="submitBtn">
              <span id="submitText">Sign In</span>
              <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
            </button>
          </form>

          <!-- OAuth Divider -->
          <div class="divider">
            <span>or continue with</span>
          </div>

          <!-- OAuth Buttons -->
          <div class="d-grid gap-2 mb-4">
            <button type="button" class="btn btn-outline-dark btn-oauth" id="googleBtn" onclick="loginWithGoogle()">
              <svg width="20" height="20" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
              <span id="googleBtnText">Continue with Google</span>
            </button>
            <button type="button" class="btn btn-outline-dark btn-oauth" id="microsoftBtn" onclick="loginWithMicrosoft()">
              <svg width="20" height="20" viewBox="0 0 23 23"><path fill="#f35325" d="M1 1h10v10H1z"/><path fill="#81bc06" d="M12 1h10v10H12z"/><path fill="#05a6f0" d="M1 12h10v10H1z"/><path fill="#ffba08" d="M12 12h10v10H12z"/></svg>
              <span id="microsoftBtnText">Continue with Microsoft</span>
            </button>
          </div>

          <!-- Register Link -->
          <div class="text-center">
            <span class="text-muted">Don't have an account?</span>
            <a href="/RecruitingAI/auth/register" class="text-decoration-none fw-semibold" style="color: var(--primary-color);">Create Account</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Base path for Docker deployment
    const basePath = '/RecruitingAI';

    // Fill login form with demo credentials
    function fillLogin(email, password) {
      document.getElementById('identifier').value = email;
      document.getElementById('password').value = password;
      // Auto-submit
      document.getElementById('loginForm').dispatchEvent(new Event('submit'));
    }

    // Toggle password visibility
    function togglePassword() {
      const field = document.getElementById('password');
      const icon = document.getElementById('passwordToggleIcon');
      if (field.type === 'password') {
        field.type = 'text';
        icon.classList.replace('bi-eye', 'bi-eye-slash');
      } else {
        field.type = 'password';
        icon.classList.replace('bi-eye-slash', 'bi-eye');
      }
    }

    // Show alert
    function showAlert(message, type = 'danger') {
      const container = document.getElementById('alertContainer');
      container.innerHTML = `
        <div class="alert alert-${type} alert-dismissible fade show" role="alert">
          <i class="bi bi-${type === 'danger' ? 'exclamation-circle' : 'check-circle'} me-2"></i>${message}
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      `;
    }

    // OAuth configuration
    let oauthConfig = { google: false, microsoft: false };

    // Check OAuth availability
    async function checkOAuthStatus() {
      try {
        const [googleRes, msRes] = await Promise.all([
          fetch(`${basePath}/api/oauth/google/status`),
          fetch(`${basePath}/api/oauth/microsoft/status`),
        ]);
        const [googleData, msData] = await Promise.all([googleRes.json(), msRes.json()]);

        oauthConfig.google = googleData.data?.enabled || false;
        oauthConfig.microsoft = msData.data?.enabled || false;

        // Update button states
        if (!oauthConfig.google) {
          document.getElementById('googleBtn').disabled = true;
          document.getElementById('googleBtn').classList.add('opacity-50');
          document.getElementById('googleBtnText').textContent = 'Google (Not configured)';
        }
        if (!oauthConfig.microsoft) {
          document.getElementById('microsoftBtn').disabled = true;
          document.getElementById('microsoftBtn').classList.add('opacity-50');
          document.getElementById('microsoftBtnText').textContent = 'Microsoft (Not configured)';
        }
      } catch (err) {
        console.error('Failed to check OAuth status:', err);
      }
    }

    checkOAuthStatus();

    // OAuth login functions - require company domain first
    function promptCompanyDomain(provider) {
      const domain = prompt('Enter your company domain to continue with ' + provider + ':');
      if (domain && domain.trim()) {
        return domain.trim();
      }
      return null;
    }

    function loginWithGoogle() {
      if (!oauthConfig.google) {
        showAlert('Google sign-in is not configured');
        return;
      }
      const domain = promptCompanyDomain('Google');
      if (domain) {
        window.location.href = `${basePath}/api/oauth/google?companyDomain=${encodeURIComponent(domain)}`;
      }
    }

    function loginWithMicrosoft() {
      if (!oauthConfig.microsoft) {
        showAlert('Microsoft sign-in is not configured');
        return;
      }
      const domain = promptCompanyDomain('Microsoft');
      if (domain) {
        window.location.href = `${basePath}/api/oauth/microsoft?companyDomain=${encodeURIComponent(domain)}`;
      }
    }

    // Form submission
    document.getElementById('loginForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const form = e.target;
      const submitBtn = document.getElementById('submitBtn');
      const submitText = document.getElementById('submitText');
      const submitSpinner = document.getElementById('submitSpinner');

      // Validate form
      if (!form.checkValidity()) {
        form.classList.add('was-validated');
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      submitText.textContent = 'Signing in...';
      submitSpinner.classList.remove('d-none');

      const identifier = document.getElementById('identifier').value;
      const password = document.getElementById('password').value;

      try {
        let res, data;

        // Check if this is a Super Admin login (email ends with @system.local)
        if (identifier.endsWith('@system.local')) {
          res = await fetch(`${basePath}/api/auth/super-admin/login`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email: identifier, password }),
          });
          data = await res.json();

          if (data.success) {
            // Store Super Admin token
            localStorage.setItem('authToken', data.data.token);
            localStorage.setItem('superAdmin', JSON.stringify(data.data.superAdmin));
            localStorage.removeItem('user');
            localStorage.removeItem('company');

            // Set cookie for server-side auth
            document.cookie = `authToken=${data.data.token}; path=/; max-age=${7 * 24 * 60 * 60}; SameSite=Lax`;

            // Redirect to admin dashboard
            window.location.href = `${basePath}/admin?token=${data.data.token}`;
            return;
          }
        } else {
          // Regular user login
          res = await fetch(`${basePath}/api/auth/login`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ identifier, password }),
          });
          data = await res.json();

          if (data.success) {
            // Store user token
            localStorage.setItem('authToken', data.data.token);
            localStorage.setItem('user', JSON.stringify(data.data.user));
            localStorage.setItem('company', JSON.stringify(data.data.company));
            localStorage.removeItem('superAdmin');

            // Set cookie for server-side auth
            document.cookie = `authToken=${data.data.token}; path=/; max-age=${7 * 24 * 60 * 60}; SameSite=Lax`;

            // Check if email is verified
            if (!data.data.user.emailVerified) {
              showAlert('Please verify your email address before accessing all features.', 'warning');
            }

            // Redirect to admin dashboard
            window.location.href = `${basePath}/admin?token=${data.data.token}`;
            return;
          }
        }

        // Show error
        showAlert(data.error || 'Invalid credentials');
      } catch (err) {
        console.error('Login error:', err);
        showAlert('An error occurred. Please try again.');
      } finally {
        submitBtn.disabled = false;
        submitText.textContent = 'Sign In';
        submitSpinner.classList.add('d-none');
      }
    });
  </script>
</body>
</html>
