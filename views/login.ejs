<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In - AI Recruiting Assistant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #0d9488 0%, #0891b2 100%);
      --primary-dark: #0f766e;
      --secondary-teal: #14b8a6;
    }

    body {
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .login-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
      overflow: hidden;
      max-width: 1000px;
      width: 100%;
    }

    .login-left {
      background: var(--primary-gradient);
      color: white;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .login-left h2 {
      font-weight: 700;
      margin-bottom: 20px;
    }

    .login-left p {
      opacity: 0.9;
      margin-bottom: 30px;
    }

    .login-right {
      padding: 40px;
    }

    .login-right h3 {
      font-weight: 600;
      color: #333;
      margin-bottom: 10px;
    }

    .login-right p {
      color: #6c757d;
      margin-bottom: 30px;
    }

    .form-control {
      padding: 12px 15px;
      border-radius: 10px;
      border: 1px solid #e2e8f0;
    }

    .form-control:focus {
      border-color: var(--secondary-teal);
      box-shadow: 0 0 0 3px rgba(20, 184, 166, 0.1);
    }

    .btn-login {
      background: var(--primary-gradient);
      border: none;
      color: white;
      padding: 12px;
      border-radius: 10px;
      font-weight: 600;
      width: 100%;
    }

    .btn-login:hover {
      background: linear-gradient(135deg, #0f766e 0%, #0e7490 100%);
      color: white;
    }

    .divider {
      display: flex;
      align-items: center;
      text-align: center;
      margin: 25px 0;
    }

    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      border-bottom: 1px solid #e2e8f0;
    }

    .divider span {
      padding: 0 15px;
      color: #6c757d;
      font-size: 0.9rem;
    }

    .social-login {
      display: flex;
      gap: 10px;
    }

    .btn-social {
      flex: 1;
      padding: 10px;
      border-radius: 10px;
      border: 1px solid #e2e8f0;
      background: white;
      color: #333;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      transition: all 0.3s;
    }

    .btn-social:hover {
      background: #f8f9fa;
      border-color: #cbd5e1;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      color: #6c757d;
      text-decoration: none;
      margin-bottom: 20px;
    }

    .back-link:hover {
      color: var(--secondary-teal);
    }

    .alert {
      border-radius: 10px;
    }

    @media (max-width: 768px) {
      .login-left {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="login-card">
      <div class="row g-0">
        <!-- Left Side - Demo Logins -->
        <div class="col-md-5 login-left">
          <a href="<%= basePath %>/" class="back-link text-white mb-4">
            <i class="bi bi-arrow-left me-2"></i> Back to Home
          </a>
          <h2><i class="bi bi-people-fill me-2"></i>AI Recruiting</h2>
          <p>Streamline your hiring process with AI-powered interviews, smart scheduling, and data-driven insights.</p>

        </div>

        <!-- Right Side - Login Form -->
        <div class="col-md-7 login-right">
          <a href="<%= basePath %>/" class="back-link d-md-none">
            <i class="bi bi-arrow-left me-2"></i> Back to Home
          </a>

          <h3>Welcome Back</h3>
          <p>Sign in to your account to continue</p>

          <div id="alertBox" class="alert alert-danger d-none" role="alert"></div>

          <form id="loginForm">
            <div class="mb-3">
              <label class="form-label">Email Address</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label">Password</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                  <i class="bi bi-eye" id="toggleIcon"></i>
                </button>
              </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="remember">
                <label class="form-check-label" for="remember">Remember me</label>
              </div>
              <a href="<%= basePath %>/forgot-password" class="text-decoration-none" style="color: var(--secondary-teal);">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-login mb-3">
              <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </button>
          </form>

          <div class="divider">
            <span>or continue with</span>
          </div>

          <div class="social-login mb-4">
            <button class="btn-social">
              <i class="bi bi-google"></i> Google
            </button>
            <button class="btn-social">
              <i class="bi bi-microsoft"></i> Microsoft
            </button>
            <button class="btn-social">
              <i class="bi bi-linkedin"></i> LinkedIn
            </button>
          </div>

          <p class="text-center text-muted">
            Don't have an account?
            <a href="<%= basePath %>/register" style="color: var(--secondary-teal); text-decoration: none; font-weight: 600;">Create one</a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= basePath %>';
    const alertBox = document.getElementById('alertBox');

    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const toggleIcon = document.getElementById('toggleIcon');
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.className = 'bi bi-eye-slash';
      } else {
        passwordInput.type = 'password';
        toggleIcon.className = 'bi bi-eye';
      }
    }

    function showError(message) {
      alertBox.textContent = message;
      alertBox.classList.remove('d-none');
    }

    function hideError() {
      alertBox.classList.add('d-none');
    }

    document.getElementById('loginForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      hideError();

      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;

      try {
        const res = await fetch(`${basePath}/api/auth/login`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ identifier: email, password: password }),
        });

        const data = await res.json();

        if (data.success) {
          localStorage.setItem('authToken', data.data.token);
          localStorage.setItem('user', JSON.stringify(data.data.user));
          if (data.data.company) {
            localStorage.setItem('company', JSON.stringify(data.data.company));
          }
          window.location.href = `${basePath}/admin?token=${data.data.token}`;
        } else {
          showError(data.error || 'Invalid email or password');
        }
      } catch (err) {
        console.error('Login error:', err);
        showError('An error occurred. Please try again.');
      }
    });
  </script>
</body>
</html>
