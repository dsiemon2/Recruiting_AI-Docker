<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Get Started - AI Recruiting Assistant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #0d9488 0%, #0891b2 100%);
      --primary-dark: #0f766e;
      --secondary-teal: #14b8a6;
    }

    body {
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .register-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
      overflow: hidden;
      max-width: 1100px;
      width: 100%;
    }

    .register-left {
      background: var(--primary-gradient);
      color: white;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .register-left h2 {
      font-weight: 700;
      margin-bottom: 20px;
    }

    .register-left p {
      opacity: 0.9;
      margin-bottom: 30px;
    }

    .plan-info {
      background: rgba(255,255,255,0.1);
      border-radius: 15px;
      padding: 20px;
    }

    .plan-info h5 {
      font-size: 1rem;
      margin-bottom: 15px;
    }

    .plan-feature {
      display: flex;
      align-items: center;
      padding: 8px 0;
      opacity: 0.9;
    }

    .plan-feature i {
      margin-right: 10px;
      color: #86efac;
    }

    .register-right {
      padding: 40px;
    }

    .register-right h3 {
      font-weight: 600;
      color: #333;
      margin-bottom: 10px;
    }

    .register-right p {
      color: #6c757d;
      margin-bottom: 25px;
    }

    .form-control, .form-select {
      padding: 12px 15px;
      border-radius: 10px;
      border: 1px solid #e2e8f0;
    }

    .form-control:focus, .form-select:focus {
      border-color: var(--secondary-teal);
      box-shadow: 0 0 0 3px rgba(20, 184, 166, 0.1);
    }

    .btn-register {
      background: var(--primary-gradient);
      border: none;
      color: white;
      padding: 12px;
      border-radius: 10px;
      font-weight: 600;
      width: 100%;
    }

    .btn-register:hover {
      background: linear-gradient(135deg, #0f766e 0%, #0e7490 100%);
      color: white;
    }

    .step-indicator {
      display: flex;
      justify-content: center;
      margin-bottom: 30px;
    }

    .step {
      display: flex;
      align-items: center;
    }

    .step-number {
      width: 35px;
      height: 35px;
      border-radius: 50%;
      background: #e2e8f0;
      color: #6c757d;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      margin-right: 10px;
    }

    .step.active .step-number {
      background: var(--primary-gradient);
      color: white;
    }

    .step.completed .step-number {
      background: #22c55e;
      color: white;
    }

    .step-line {
      width: 60px;
      height: 2px;
      background: #e2e8f0;
      margin: 0 15px;
    }

    .step-line.completed {
      background: #22c55e;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      color: #6c757d;
      text-decoration: none;
      margin-bottom: 20px;
    }

    .back-link:hover {
      color: var(--secondary-teal);
    }

    .alert {
      border-radius: 10px;
    }

    .password-requirements {
      font-size: 0.8rem;
      color: #6c757d;
      margin-top: 5px;
    }

    .password-requirements li {
      margin-bottom: 3px;
    }

    .password-requirements li.valid {
      color: #22c55e;
    }

    @media (max-width: 768px) {
      .register-left {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="register-container">
    <div class="register-card">
      <div class="row g-0">
        <!-- Left Side - Plan Info -->
        <div class="col-md-4 register-left">
          <a href="<%= basePath %>/" class="back-link text-white mb-4">
            <i class="bi bi-arrow-left me-2"></i> Back to Home
          </a>
          <h2><i class="bi bi-people-fill me-2"></i>AI Recruiting</h2>
          <p>Join thousands of companies transforming their hiring process with AI-powered interviews.</p>

          <div class="plan-info">
            <h5><i class="bi bi-check-circle-fill me-2"></i>What You Get</h5>
            <div class="plan-feature"><i class="bi bi-check"></i> 14-day free trial</div>
            <div class="plan-feature"><i class="bi bi-check"></i> AI-powered interviews</div>
            <div class="plan-feature"><i class="bi bi-check"></i> Smart candidate scoring</div>
            <div class="plan-feature"><i class="bi bi-check"></i> Custom job roles</div>
            <div class="plan-feature"><i class="bi bi-check"></i> Analytics dashboard</div>
            <div class="plan-feature"><i class="bi bi-check"></i> 24 language support</div>
            <div class="plan-feature"><i class="bi bi-check"></i> No credit card required</div>
          </div>
        </div>

        <!-- Right Side - Registration Form -->
        <div class="col-md-8 register-right">
          <a href="<%= basePath %>/" class="back-link d-md-none">
            <i class="bi bi-arrow-left me-2"></i> Back to Home
          </a>

          <!-- Step Indicator -->
          <div class="step-indicator">
            <div class="step active" id="step1Indicator">
              <span class="step-number">1</span>
              <span class="d-none d-sm-inline">Account</span>
            </div>
            <div class="step-line" id="line1"></div>
            <div class="step" id="step2Indicator">
              <span class="step-number">2</span>
              <span class="d-none d-sm-inline">Company</span>
            </div>
            <div class="step-line" id="line2"></div>
            <div class="step" id="step3Indicator">
              <span class="step-number">3</span>
              <span class="d-none d-sm-inline">Plan</span>
            </div>
          </div>

          <h3 id="stepTitle">Create Your Account</h3>
          <p id="stepDescription">Start your free trial - no credit card required</p>

          <div id="alertBox" class="alert alert-danger d-none" role="alert"></div>

          <!-- Step 1: Account Info -->
          <form id="step1Form">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="John" required>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Smith" required>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label">Work Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="john@company.com" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Password</label>
              <div class="input-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="Create a strong password" required minlength="8">
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('password', 'toggleIcon1')">
                  <i class="bi bi-eye" id="toggleIcon1"></i>
                </button>
              </div>
              <ul class="password-requirements">
                <li id="req-length">At least 8 characters</li>
                <li id="req-upper">One uppercase letter</li>
                <li id="req-number">One number</li>
              </ul>
            </div>

            <div class="mb-4">
              <label class="form-label">Confirm Password</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
            </div>

            <button type="submit" class="btn btn-register">
              Continue <i class="bi bi-arrow-right ms-2"></i>
            </button>
          </form>

          <!-- Step 2: Company Info (hidden initially) -->
          <form id="step2Form" class="d-none">
            <div class="mb-3">
              <label class="form-label">Company Name</label>
              <input type="text" class="form-control" id="companyName" name="companyName" placeholder="Acme Corporation" required>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">Industry</label>
                <select class="form-select" id="industry" name="industry" required>
                  <option value="">Select industry...</option>
                  <option value="technology">Technology</option>
                  <option value="healthcare">Healthcare</option>
                  <option value="finance">Finance & Banking</option>
                  <option value="retail">Retail & E-commerce</option>
                  <option value="manufacturing">Manufacturing</option>
                  <option value="education">Education</option>
                  <option value="government">Government</option>
                  <option value="nonprofit">Non-Profit</option>
                  <option value="services">Professional Services</option>
                  <option value="other">Other</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Company Size</label>
                <select class="form-select" id="companySize" name="companySize" required>
                  <option value="">Select size...</option>
                  <option value="1-10">1-10 employees</option>
                  <option value="11-50">11-50 employees</option>
                  <option value="51-200">51-200 employees</option>
                  <option value="201-500">201-500 employees</option>
                  <option value="501-1000">501-1000 employees</option>
                  <option value="1000+">1000+ employees</option>
                </select>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label">Phone Number (Optional)</label>
              <input type="tel" class="form-control" id="phone" name="phone" placeholder="+1 (555) 123-4567">
            </div>

            <div class="mb-4">
              <label class="form-label">How did you hear about us?</label>
              <select class="form-select" id="referral" name="referral">
                <option value="">Select...</option>
                <option value="search">Search Engine</option>
                <option value="social">Social Media</option>
                <option value="referral">Friend/Colleague</option>
                <option value="blog">Blog/Article</option>
                <option value="event">Conference/Event</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="d-flex gap-3">
              <button type="button" class="btn btn-outline-secondary flex-fill" onclick="goToStep(1)">
                <i class="bi bi-arrow-left me-2"></i> Back
              </button>
              <button type="submit" class="btn btn-register flex-fill">
                Continue <i class="bi bi-arrow-right ms-2"></i>
              </button>
            </div>
          </form>

          <!-- Step 3: Plan Selection (hidden initially) -->
          <form id="step3Form" class="d-none">
            <div class="row g-3 mb-4">
              <div class="col-md-6">
                <div class="card h-100 plan-card" data-plan="free" onclick="selectPlan('free')">
                  <div class="card-body text-center">
                    <h5 class="card-title">Free Trial</h5>
                    <h2 class="mb-0">$0</h2>
                    <small class="text-muted">/month</small>
                    <hr>
                    <ul class="list-unstyled text-start small">
                      <li><i class="bi bi-check text-success me-2"></i>5 Interviews/month</li>
                      <li><i class="bi bi-check text-success me-2"></i>2 Job Roles</li>
                      <li><i class="bi bi-check text-success me-2"></i>Basic AI</li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card h-100 plan-card" data-plan="nonprofit" onclick="selectPlan('nonprofit')">
                  <div class="card-body text-center">
                    <h5 class="card-title">Non-Profit</h5>
                    <h2 class="mb-0">$9.99</h2>
                    <small class="text-muted">/month</small>
                    <hr>
                    <ul class="list-unstyled text-start small">
                      <li><i class="bi bi-check text-success me-2"></i>25 Interviews/month</li>
                      <li><i class="bi bi-check text-success me-2"></i>5 Job Roles</li>
                      <li><i class="bi bi-check text-success me-2"></i>Custom Questions</li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card h-100 plan-card border-primary" data-plan="professional" onclick="selectPlan('professional')">
                  <div class="card-body text-center">
                    <span class="badge bg-primary mb-2">Most Popular</span>
                    <h5 class="card-title">Professional</h5>
                    <h2 class="mb-0">$29.99</h2>
                    <small class="text-muted">/month</small>
                    <hr>
                    <ul class="list-unstyled text-start small">
                      <li><i class="bi bi-check text-success me-2"></i>100 Interviews/month</li>
                      <li><i class="bi bi-check text-success me-2"></i>Unlimited Roles</li>
                      <li><i class="bi bi-check text-success me-2"></i>Full Analytics</li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card h-100 plan-card" data-plan="premium" onclick="selectPlan('premium')">
                  <div class="card-body text-center">
                    <h5 class="card-title">Premium</h5>
                    <h2 class="mb-0">$59.00</h2>
                    <small class="text-muted">/month</small>
                    <hr>
                    <ul class="list-unstyled text-start small">
                      <li><i class="bi bi-check text-success me-2"></i>Unlimited Everything</li>
                      <li><i class="bi bi-check text-success me-2"></i>API Access</li>
                      <li><i class="bi bi-check text-success me-2"></i>White-Label</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <input type="hidden" id="selectedPlan" name="plan" value="professional">

            <div class="form-check mb-4">
              <input type="checkbox" class="form-check-input" id="terms" required>
              <label class="form-check-label" for="terms">
                I agree to the <a href="#" style="color: var(--secondary-teal);">Terms of Service</a> and <a href="#" style="color: var(--secondary-teal);">Privacy Policy</a>
              </label>
            </div>

            <div class="d-flex gap-3">
              <button type="button" class="btn btn-outline-secondary flex-fill" onclick="goToStep(2)">
                <i class="bi bi-arrow-left me-2"></i> Back
              </button>
              <button type="submit" class="btn btn-register flex-fill">
                <i class="bi bi-rocket-takeoff me-2"></i> Start Free Trial
              </button>
            </div>
          </form>

          <p class="text-center text-muted mt-4">
            Already have an account?
            <a href="<%= basePath %>/login" style="color: var(--secondary-teal); text-decoration: none; font-weight: 600;">Sign in</a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= basePath %>';
    const alertBox = document.getElementById('alertBox');
    let currentStep = 1;
    let formData = {};

    // Pre-select plan from URL if provided
    const urlParams = new URLSearchParams(window.location.search);
    const planParam = urlParams.get('plan');
    if (planParam) {
      formData.plan = planParam;
    }

    function togglePassword(inputId, iconId) {
      const input = document.getElementById(inputId);
      const icon = document.getElementById(iconId);
      if (input.type === 'password') {
        input.type = 'text';
        icon.className = 'bi bi-eye-slash';
      } else {
        input.type = 'password';
        icon.className = 'bi bi-eye';
      }
    }

    function showError(message) {
      alertBox.textContent = message;
      alertBox.classList.remove('d-none');
    }

    function hideError() {
      alertBox.classList.add('d-none');
    }

    function goToStep(step) {
      hideError();
      currentStep = step;

      // Hide all forms
      document.getElementById('step1Form').classList.add('d-none');
      document.getElementById('step2Form').classList.add('d-none');
      document.getElementById('step3Form').classList.add('d-none');

      // Show current step form
      document.getElementById(`step${step}Form`).classList.remove('d-none');

      // Update indicators
      for (let i = 1; i <= 3; i++) {
        const indicator = document.getElementById(`step${i}Indicator`);
        const line = document.getElementById(`line${i - 1}`);
        indicator.classList.remove('active', 'completed');
        if (line) line.classList.remove('completed');

        if (i < step) {
          indicator.classList.add('completed');
          if (line) line.classList.add('completed');
        } else if (i === step) {
          indicator.classList.add('active');
        }
      }

      // Update title
      const titles = {
        1: { title: 'Create Your Account', desc: 'Start your free trial - no credit card required' },
        2: { title: 'Company Information', desc: 'Tell us about your organization' },
        3: { title: 'Choose Your Plan', desc: 'Select the plan that works for you' }
      };
      document.getElementById('stepTitle').textContent = titles[step].title;
      document.getElementById('stepDescription').textContent = titles[step].desc;
    }

    function selectPlan(plan) {
      document.querySelectorAll('.plan-card').forEach(card => {
        card.classList.remove('border-primary', 'bg-light');
      });
      document.querySelector(`.plan-card[data-plan="${plan}"]`).classList.add('border-primary', 'bg-light');
      document.getElementById('selectedPlan').value = plan;
      formData.plan = plan;
    }

    // Password validation
    document.getElementById('password').addEventListener('input', function() {
      const password = this.value;
      document.getElementById('req-length').classList.toggle('valid', password.length >= 8);
      document.getElementById('req-upper').classList.toggle('valid', /[A-Z]/.test(password));
      document.getElementById('req-number').classList.toggle('valid', /[0-9]/.test(password));
    });

    // Step 1 form submission
    document.getElementById('step1Form').addEventListener('submit', function(e) {
      e.preventDefault();
      hideError();

      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;

      if (password !== confirmPassword) {
        showError('Passwords do not match');
        return;
      }

      if (password.length < 8 || !/[A-Z]/.test(password) || !/[0-9]/.test(password)) {
        showError('Password does not meet requirements');
        return;
      }

      formData.firstName = document.getElementById('firstName').value;
      formData.lastName = document.getElementById('lastName').value;
      formData.email = document.getElementById('email').value;
      formData.password = password;

      goToStep(2);
    });

    // Step 2 form submission
    document.getElementById('step2Form').addEventListener('submit', function(e) {
      e.preventDefault();
      hideError();

      formData.companyName = document.getElementById('companyName').value;
      formData.industry = document.getElementById('industry').value;
      formData.companySize = document.getElementById('companySize').value;
      formData.phone = document.getElementById('phone').value;
      formData.referral = document.getElementById('referral').value;

      goToStep(3);

      // Pre-select plan if from URL
      if (formData.plan) {
        selectPlan(formData.plan);
      } else {
        selectPlan('professional');
      }
    });

    // Step 3 form submission
    document.getElementById('step3Form').addEventListener('submit', async function(e) {
      e.preventDefault();
      hideError();

      formData.plan = document.getElementById('selectedPlan').value;

      try {
        const res = await fetch(`${basePath}/api/auth/register`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData),
        });

        const data = await res.json();

        if (data.success) {
          localStorage.setItem('authToken', data.data.token);
          localStorage.setItem('user', JSON.stringify(data.data.user));
          if (data.data.company) {
            localStorage.setItem('company', JSON.stringify(data.data.company));
          }
          window.location.href = `${basePath}/admin?token=${data.data.token}`;
        } else {
          showError(data.error || 'Registration failed. Please try again.');
        }
      } catch (err) {
        console.error('Registration error:', err);
        showError('An error occurred. Please try again.');
      }
    });
  </script>
</body>
</html>
