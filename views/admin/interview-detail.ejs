<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Interview - <%= interview.candidateName %> - AI Recruiting Assistant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #1e3a5f; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .score-badge { font-size: 1.5rem; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; border-radius: 50%; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'interviews' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <a href="/RecruitingAI/admin/interviews?token=<%= token %>" class="text-muted text-decoration-none">
              <i class="bi bi-arrow-left me-1"></i> Back to Interviews
            </a>
            <h2 class="mt-2"><i class="bi bi-person text-primary me-2"></i><%= interview.candidateName %></h2>
            <p class="text-muted mb-0"><%= interview.candidateEmail %></p>
          </div>
          <div>
            <% if (interview.status === 'SCHEDULED') { %>
            <% if (interview.sessions && interview.sessions[0]?.interviewToken) { %>
            <a href="/interview/<%= interview.sessions[0].interviewToken %>/manage?adminToken=<%= token %>" class="btn btn-primary me-2" target="_blank" data-bs-toggle="tooltip" title="Open manager dashboard">
              <i class="bi bi-display"></i> Manager View
            </a>
            <button class="btn btn-success me-2" onclick="copyInterviewLink('<%= interview.sessions[0].interviewToken %>')" data-bs-toggle="tooltip" title="Copy candidate interview link">
              <i class="bi bi-link-45deg"></i> Copy Link
            </button>
            <% } else { %>
            <button class="btn btn-success me-2" id="createSessionBtn" data-bs-toggle="tooltip" title="Generate interview link">
              <i class="bi bi-play-fill"></i> Generate Link
            </button>
            <% } %>
            <% } else if (interview.status === 'IN_PROGRESS' && interview.sessions[0]?.interviewToken) { %>
            <a href="/interview/<%= interview.sessions[0].interviewToken %>/manage?adminToken=<%= token %>" class="btn btn-primary me-2" target="_blank" data-bs-toggle="tooltip" title="Join interview as manager">
              <i class="bi bi-display"></i> Join as Manager
            </a>
            <% } %>
            <% if (interview.sessions[0]?.teamsJoinWebUrl) { %>
            <a href="<%= interview.sessions[0].teamsJoinWebUrl %>" target="_blank" class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Join Teams meeting">
              <i class="bi bi-microsoft-teams"></i> Teams Meeting
            </a>
            <% } %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-8">
            <!-- Interview Details -->
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Interview Details</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <p><strong>Job Role:</strong> <%= interview.jobRole.title %></p>
                    <p><strong>Scheduled:</strong> <%= new Date(interview.scheduledAt).toLocaleString() %></p>
                    <p><strong>Duration:</strong> <%= interview.duration %> minutes</p>
                  </div>
                  <div class="col-md-6">
                    <p><strong>Mode:</strong>
                      <span class="badge bg-<%= interview.mode === 'AI_ONLY' ? 'info' : 'primary' %>">
                        <%= interview.mode === 'AI_ONLY' ? 'AI Only' : 'Hybrid' %>
                      </span>
                    </p>
                    <p><strong>Status:</strong>
                      <% if (interview.status === 'SCHEDULED') { %>
                      <span class="badge bg-warning text-dark">Scheduled</span>
                      <% } else if (interview.status === 'IN_PROGRESS') { %>
                      <span class="badge bg-primary">In Progress</span>
                      <% } else if (interview.status === 'COMPLETED') { %>
                      <span class="badge bg-success">Completed</span>
                      <% } else { %>
                      <span class="badge bg-secondary"><%= interview.status %></span>
                      <% } %>
                    </p>
                    <% if (interview.sessions[0]?.manager) { %>
                    <p><strong>Interviewer:</strong> <%= interview.sessions[0].manager.name %></p>
                    <% } %>
                  </div>
                </div>
                <% if (interview.notes) { %>
                <hr>
                <p><strong>Notes:</strong></p>
                <p class="text-muted"><%= interview.notes %></p>
                <% } %>
              </div>
            </div>

            <!-- Questions -->
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-chat-square-text me-2"></i>Interview Questions</h5>
              </div>
              <div class="card-body">
                <% interview.jobRole.categories?.forEach(category => { %>
                <h6 class="text-uppercase text-muted mb-3"><%= category.name %></h6>
                <% category.questions.forEach((q, idx) => { %>
                <div class="card mb-2">
                  <div class="card-body py-2">
                    <div class="d-flex align-items-center mb-1">
                      <span class="badge bg-light text-dark me-2"><%= idx + 1 %></span>
                      <% if (q.isRequired) { %>
                      <span class="badge bg-danger me-2">Required</span>
                      <% } %>
                    </div>
                    <p class="mb-0"><%= q.text %></p>
                  </div>
                </div>
                <% }) %>
                <% }) %>
              </div>
            </div>

            <!-- Transcript (if available) -->
            <% if (interview.result?.transcript) { %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Transcript</h5>
              </div>
              <div class="card-body">
                <pre class="bg-light p-3 rounded" style="white-space: pre-wrap;"><%= interview.result.transcript %></pre>
              </div>
            </div>
            <% } %>
          </div>

          <div class="col-md-4">
            <!-- Score Card -->
            <% if (interview.result) { %>
            <div class="card mb-4">
              <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-star me-2"></i>Scorecard</h5>
                <% if (interview.status === 'COMPLETED' && interview.result.transcript && !interview.result.summary) { %>
                <button class="btn btn-sm btn-primary" id="generateSummaryBtn" data-bs-toggle="tooltip" title="Generate AI analysis">
                  <i class="bi bi-magic"></i> Generate AI Summary
                </button>
                <% } %>
              </div>
              <div class="card-body text-center">
                <% if (interview.result.overallScore) { %>
                <div class="score-badge bg-<%= interview.result.overallScore >= 4 ? 'success' : interview.result.overallScore >= 3 ? 'warning' : 'danger' %> text-white mx-auto mb-3">
                  <%= interview.result.overallScore %>/5
                </div>
                <% } else if (interview.status === 'COMPLETED' && !interview.result.summary) { %>
                <div class="py-3">
                  <i class="bi bi-robot text-muted" style="font-size: 2rem;"></i>
                  <p class="text-muted mt-2 mb-0">Click "Generate AI Summary" to analyze the interview</p>
                </div>
                <% } %>
                <% if (interview.result.recommendation) { %>
                <p class="mb-2">
                  <strong>Recommendation:</strong>
                  <span class="badge bg-<%= interview.result.recommendation.includes('YES') ? 'success' : interview.result.recommendation === 'MAYBE' ? 'warning' : 'danger' %>">
                    <%= interview.result.recommendation.replace('_', ' ') %>
                  </span>
                </p>
                <% } %>

                <% if (interview.result.scorecard?.categories) { %>
                <hr>
                <div class="text-start">
                  <h6 class="text-muted mb-3">Category Scores</h6>
                  <% Object.entries(interview.result.scorecard.categories).forEach(([catName, catData]) => { %>
                  <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                      <span class="fw-semibold"><%= catName %></span>
                      <span class="badge bg-<%= catData.score >= 4 ? 'success' : catData.score >= 3 ? 'warning' : 'danger' %>"><%= catData.score %>/5</span>
                    </div>
                    <div class="progress" style="height: 6px;">
                      <div class="progress-bar bg-<%= catData.score >= 4 ? 'success' : catData.score >= 3 ? 'warning' : 'danger' %>" role="progressbar" style="width: <%= catData.score * 20 %>%"></div>
                    </div>
                    <% if (catData.notes) { %>
                    <small class="text-muted"><%= catData.notes %></small>
                    <% } %>
                  </div>
                  <% }) %>
                </div>
                <% } %>
              </div>
            </div>

            <!-- Summary -->
            <% if (interview.result.summary) { %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>AI Summary</h5>
              </div>
              <div class="card-body">
                <p class="mb-0"><%= interview.result.summary %></p>
              </div>
            </div>

            <!-- Strengths & Weaknesses -->
            <% if (interview.result.scorecard?.strengths?.length || interview.result.scorecard?.weaknesses?.length) { %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Analysis</h5>
              </div>
              <div class="card-body">
                <% if (interview.result.scorecard.strengths?.length) { %>
                <h6 class="text-success"><i class="bi bi-check-circle me-1"></i>Strengths</h6>
                <ul class="mb-3">
                  <% interview.result.scorecard.strengths.forEach(s => { %>
                  <li class="text-muted"><%= s %></li>
                  <% }) %>
                </ul>
                <% } %>
                <% if (interview.result.scorecard.weaknesses?.length) { %>
                <h6 class="text-warning"><i class="bi bi-exclamation-triangle me-1"></i>Areas for Improvement</h6>
                <ul class="mb-0">
                  <% interview.result.scorecard.weaknesses.forEach(w => { %>
                  <li class="text-muted"><%= w %></li>
                  <% }) %>
                </ul>
                <% } %>
              </div>
            </div>
            <% } %>
            <% } %>

            <!-- Manager Notes -->
            <% if (interview.result.managerNotes) { %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Manager Notes</h5>
              </div>
              <div class="card-body">
                <p class="mb-0"><%= interview.result.managerNotes %></p>
              </div>
            </div>
            <% } %>
            <% } else { %>
            <div class="card mb-4">
              <div class="card-body text-center py-4">
                <i class="bi bi-hourglass text-muted" style="font-size: 2rem;"></i>
                <p class="text-muted mt-2 mb-0">Results will be available after the interview is completed.</p>
              </div>
            </div>
            <% } %>

            <!-- Web Interview Session -->
            <% if (interview.sessions && interview.sessions[0]) { %>
            <div class="card mb-4">
              <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-camera-video me-2"></i>Web Interview</h6>
              </div>
              <div class="card-body">
                <p class="mb-2">
                  <strong>Status:</strong>
                  <% const sessionState = interview.sessions[0].webSessionState; %>
                  <span class="badge bg-<%= sessionState === 'COMPLETED' ? 'success' : sessionState === 'IN_PROGRESS' ? 'primary' : sessionState === 'READY' ? 'info' : 'secondary' %>">
                    <%= sessionState %>
                  </span>
                </p>
                <% if (interview.sessions[0].startedAt) { %>
                <p class="mb-2"><strong>Started:</strong> <%= new Date(interview.sessions[0].startedAt).toLocaleString() %></p>
                <% } %>
                <% if (interview.sessions[0].endedAt) { %>
                <p class="mb-2"><strong>Ended:</strong> <%= new Date(interview.sessions[0].endedAt).toLocaleString() %></p>
                <% } %>
                <hr>
                <p class="small text-muted mb-2">Candidate Link:</p>
                <div class="input-group input-group-sm mb-2">
                  <input type="text" class="form-control" id="candidateLink" value="<%= `${process.env.BASE_URL || 'http://localhost:8050'}/interview/${interview.sessions[0].interviewToken}` %>" readonly>
                  <button class="btn btn-outline-secondary" onclick="copyToClipboard('candidateLink')" data-bs-toggle="tooltip" title="Copy link">
                    <i class="bi bi-clipboard"></i>
                  </button>
                </div>
                <a href="/interview/<%= interview.sessions[0].interviewToken %>/manage?adminToken=<%= token %>" target="_blank" class="btn btn-sm btn-outline-primary w-100" data-bs-toggle="tooltip" title="Open manager dashboard in new tab">
                  <i class="bi bi-display me-1"></i> Open Manager Dashboard
                </a>
              </div>
            </div>
            <% } %>

            <!-- Actions -->
            <div class="card">
              <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-gear me-2"></i>Actions</h6>
              </div>
              <div class="card-body">
                <% if (interview.status === 'SCHEDULED') { %>
                <% if (!interview.sessions || !interview.sessions[0]) { %>
                <button class="btn btn-success w-100 mb-2" id="createSessionBtnSidebar" data-bs-toggle="tooltip" title="Generate a shareable interview link">
                  <i class="bi bi-link-45deg"></i> Generate Interview Link
                </button>
                <% } %>
                <button class="btn btn-outline-warning w-100 mb-2" data-bs-toggle="tooltip" title="Edit interview details">
                  <i class="bi bi-pencil"></i> Edit Interview
                </button>
                <button class="btn btn-outline-danger w-100" data-bs-toggle="tooltip" title="Cancel this interview">
                  <i class="bi bi-x-circle"></i> Cancel Interview
                </button>
                <% } else if (interview.status === 'COMPLETED') { %>
                <button class="btn btn-outline-primary w-100 mb-2" data-bs-toggle="tooltip" title="Export interview report as PDF">
                  <i class="bi bi-download"></i> Export Report
                </button>
                <button class="btn btn-outline-secondary w-100" data-bs-toggle="tooltip" title="Email report to hiring team">
                  <i class="bi bi-envelope"></i> Send to Hiring Team
                </button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const token = '<%= token %>';
    const interviewId = '<%= interview.id %>';

    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));

      // Create session button handlers
      const createSessionBtn = document.getElementById('createSessionBtn');
      const createSessionBtnSidebar = document.getElementById('createSessionBtnSidebar');

      [createSessionBtn, createSessionBtnSidebar].forEach(btn => {
        if (btn) {
          btn.addEventListener('click', createInterviewSession);
        }
      });

      // Generate AI Summary button handler
      const generateSummaryBtn = document.getElementById('generateSummaryBtn');
      if (generateSummaryBtn) {
        generateSummaryBtn.addEventListener('click', generateAISummary);
      }
    });

    async function generateAISummary() {
      const btn = document.getElementById('generateSummaryBtn');
      const originalHtml = btn.innerHTML;

      try {
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Analyzing...';

        const response = await fetch(`/api/interviews/${interviewId}/generate-summary?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const data = await response.json();
        if (data.success) {
          // Reload page to show the generated summary
          window.location.reload();
        } else {
          alert('Failed to generate summary: ' + (data.error || 'Unknown error'));
          btn.disabled = false;
          btn.innerHTML = originalHtml;
        }
      } catch (err) {
        console.error('Error generating summary:', err);
        alert('Failed to generate interview summary');
        btn.disabled = false;
        btn.innerHTML = originalHtml;
      }
    }

    async function createInterviewSession() {
      try {
        const response = await fetch(`/api/interviews/${interviewId}/session?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const data = await response.json();
        if (data.success) {
          // Reload page to show the new session
          window.location.reload();
        } else {
          alert('Failed to create session: ' + (data.error || 'Unknown error'));
        }
      } catch (err) {
        console.error('Error creating session:', err);
        alert('Failed to create interview session');
      }
    }

    function copyInterviewLink(interviewToken) {
      const link = `${window.location.origin}/interview/${interviewToken}`;
      navigator.clipboard.writeText(link).then(() => {
        alert('Interview link copied to clipboard!');
      }).catch(err => {
        console.error('Copy failed:', err);
        prompt('Copy this link:', link);
      });
    }

    function copyToClipboard(inputId) {
      const input = document.getElementById(inputId);
      input.select();
      navigator.clipboard.writeText(input.value).then(() => {
        // Show brief feedback
        const btn = input.nextElementSibling;
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check"></i>';
        setTimeout(() => btn.innerHTML = originalHtml, 1500);
      });
    }
  </script>
</body>
</html>
