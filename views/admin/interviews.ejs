<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Interviews - AI Recruiting Assistant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar { min-height: 100vh; background: #1e3a5f; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .bulk-actions { display: none; background: #e3f2fd; padding: 0.75rem 1rem; border-radius: 8px; }
    .bulk-actions.show { display: flex; }
    .row-checkbox { cursor: pointer; }
    tr.selected { background-color: #e3f2fd !important; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'interviews' }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-calendar-event text-primary me-2"></i>Interviews</h2>
          <a href="/RecruitingAI/admin/interviews/new?token=<%= token %>" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Schedule Interview
          </a>
        </div>

        <!-- Status Filter -->
        <div class="mb-4">
          <div class="btn-group" role="group">
            <a href="/RecruitingAI/admin/interviews?token=<%= token %>" class="btn btn-<%= currentStatus === 'all' ? '' : 'outline-' %>secondary">All</a>
            <a href="/RecruitingAI/admin/interviews?token=<%= token %>&status=SCHEDULED" class="btn btn-<%= currentStatus === 'SCHEDULED' ? '' : 'outline-' %>warning">Scheduled</a>
            <a href="/RecruitingAI/admin/interviews?token=<%= token %>&status=IN_PROGRESS" class="btn btn-<%= currentStatus === 'IN_PROGRESS' ? '' : 'outline-' %>primary">In Progress</a>
            <a href="/RecruitingAI/admin/interviews?token=<%= token %>&status=COMPLETED" class="btn btn-<%= currentStatus === 'COMPLETED' ? '' : 'outline-' %>success">Completed</a>
            <a href="/RecruitingAI/admin/interviews?token=<%= token %>&status=CANCELLED" class="btn btn-<%= currentStatus === 'CANCELLED' ? '' : 'outline-' %>danger">Cancelled</a>
          </div>
        </div>

        <!-- Bulk Actions -->
        <div class="bulk-actions mb-3" id="bulkActions">
          <span class="me-3"><strong id="selectedCount">0</strong> selected</span>
          <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Cancel selected interviews">
            <i class="bi bi-x-circle"></i> Cancel Selected
          </button>
        </div>

        <!-- Interviews Table -->
        <div class="card">
          <div class="card-body p-0">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" class="form-check-input" id="selectAll" data-bs-toggle="tooltip" title="Select all">
                  </th>
                  <th>Candidate</th>
                  <th>Job Role</th>
                  <th>Scheduled</th>
                  <th>Mode</th>
                  <th>Status</th>
                  <th>Score</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="tableBody">
                <% if (interviews && interviews.length > 0) { %>
                  <% interviews.forEach(interview => { %>
                  <tr data-id="<%= interview.id %>">
                    <td><input type="checkbox" class="form-check-input row-checkbox"></td>
                    <td>
                      <strong><%= interview.candidateName %></strong><br>
                      <small class="text-muted"><%= interview.candidateEmail %></small>
                    </td>
                    <td><%= interview.jobRole?.title || 'N/A' %></td>
                    <td><%= new Date(interview.scheduledAt).toLocaleString() %></td>
                    <td>
                      <span class="badge bg-<%= interview.mode === 'AI_ONLY' ? 'info' : 'primary' %>">
                        <%= interview.mode === 'AI_ONLY' ? 'AI Only' : 'Hybrid' %>
                      </span>
                    </td>
                    <td>
                      <% if (interview.status === 'SCHEDULED') { %>
                      <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Scheduled</span>
                      <% } else if (interview.status === 'IN_PROGRESS') { %>
                      <span class="badge bg-primary"><i class="bi bi-play-circle"></i> In Progress</span>
                      <% } else if (interview.status === 'COMPLETED') { %>
                      <span class="badge bg-success"><i class="bi bi-check-circle"></i> Completed</span>
                      <% } else if (interview.status === 'CANCELLED') { %>
                      <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Cancelled</span>
                      <% } else { %>
                      <span class="badge bg-secondary"><i class="bi bi-dash-circle"></i> <%= interview.status %></span>
                      <% } %>
                    </td>
                    <td>
                      <% if (interview.result?.overallScore) { %>
                      <span class="badge bg-<%= interview.result.overallScore >= 4 ? 'success' : interview.result.overallScore >= 3 ? 'warning' : 'danger' %>">
                        <%= interview.result.overallScore %>/5
                      </span>
                      <% } else { %>
                      <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/RecruitingAI/admin/interviews/<%= interview.id %>?token=<%= token %>"
                         class="btn btn-sm btn-outline-primary"
                         data-bs-toggle="tooltip"
                         title="View interview details">
                        <i class="bi bi-eye"></i>
                      </a>
                      <% if (interview.status === 'SCHEDULED') { %>
                      <% if (interview.sessions && interview.sessions[0]?.interviewToken) { %>
                      <a href="/interview/<%= interview.sessions[0].interviewToken %>/manage?adminToken=<%= token %>"
                         class="btn btn-sm btn-success"
                         target="_blank"
                         data-bs-toggle="tooltip"
                         title="Open manager dashboard">
                        <i class="bi bi-display"></i>
                      </a>
                      <% } else { %>
                      <a href="/RecruitingAI/admin/interviews/<%= interview.id %>?token=<%= token %>"
                         class="btn btn-sm btn-outline-success"
                         data-bs-toggle="tooltip"
                         title="Generate interview link">
                        <i class="bi bi-link-45deg"></i>
                      </a>
                      <% } %>
                      <% } else if (interview.status === 'IN_PROGRESS' && interview.sessions && interview.sessions[0]?.interviewToken) { %>
                      <a href="/interview/<%= interview.sessions[0].interviewToken %>/manage?adminToken=<%= token %>"
                         class="btn btn-sm btn-primary"
                         target="_blank"
                         data-bs-toggle="tooltip"
                         title="Join interview as manager">
                        <i class="bi bi-display"></i>
                      </a>
                      <% } %>
                      <button class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Cancel interview">
                        <i class="bi bi-x"></i>
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                <% } else { %>
                <tr>
                  <td colspan="8" class="text-center text-muted py-4">
                    No interviews found. Schedule one to get started.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Pagination Footer -->
          <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">Showing <span id="showingStart">1</span>-<span id="showingEnd"><%= interviews?.length || 0 %></span> of <span id="totalRows"><%= total || interviews?.length || 0 %></span></div>
            <nav>
              <ul class="pagination pagination-sm mb-0" id="pagination">
                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
              </ul>
            </nav>
            <select class="form-select form-select-sm" id="pageSize" style="width: auto;">
              <option value="10">10 / page</option>
              <option value="25">25 / page</option>
              <option value="50">50 / page</option>
            </select>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize tooltips
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));

      // Select all functionality
      const selectAll = document.getElementById('selectAll');
      const rowCheckboxes = document.querySelectorAll('.row-checkbox');
      const bulkActions = document.getElementById('bulkActions');
      const selectedCount = document.getElementById('selectedCount');

      selectAll?.addEventListener('change', (e) => {
        rowCheckboxes.forEach(cb => {
          cb.checked = e.target.checked;
          cb.closest('tr')?.classList.toggle('selected', e.target.checked);
        });
        updateBulkActions();
      });

      rowCheckboxes.forEach(cb => {
        cb.addEventListener('change', () => {
          cb.closest('tr')?.classList.toggle('selected', cb.checked);
          updateBulkActions();
        });
      });

      function updateBulkActions() {
        const checked = document.querySelectorAll('.row-checkbox:checked').length;
        selectedCount.textContent = checked;
        bulkActions.classList.toggle('show', checked > 0);
      }
    });
  </script>
</body>
</html>
