  <script>
    const basePath = '<%= basePath %>';

    // Demo login function
    async function demoLogin(email, password) {
      try {
        const res = await fetch(`${basePath}/api/auth/login`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ identifier: email, password: password }),
        });

        const data = await res.json();

        if (data.success) {
          localStorage.setItem('authToken', data.data.token);
          localStorage.setItem('user', JSON.stringify(data.data.user));
          if (data.data.company) {
            localStorage.setItem('company', JSON.stringify(data.data.company));
          }
          window.location.href = `${basePath}/admin?token=${data.data.token}`;
        } else {
          alert('Demo login failed: ' + (data.error || 'Unknown error'));
        }
      } catch (err) {
        console.error('Login error:', err);
        alert('An error occurred. Please try again.');
      }
    }
  </script>
