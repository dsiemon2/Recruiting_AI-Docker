      overflow: hidden;
    }
    .pricing-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }
    .pricing-card.popular {
      border: 3px solid var(--secondary-teal);
    }
    .pricing-card.popular::before {
      content: 'MOST POPULAR';
      position: absolute;
      top: 15px;
      right: -35px;
      background: var(--secondary-teal);
      color: white;
      padding: 5px 40px;
      font-size: 0.7rem;
      font-weight: 600;
      transform: rotate(45deg);
    }
    .pricing-tier {
      font-size: 1.1rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 15px;
    }
    .pricing-price {
      font-size: 3rem;
      font-weight: 700;
      color: #333;
    }
    .pricing-price span {
      font-size: 1rem;
      font-weight: 400;
      color: #6c757d;
    }
    .pricing-features {
      list-style: none;
      padding: 0;
      margin: 25px 0;
    }
    .pricing-features li {
      padding: 10px 0;
      border-bottom: 1px solid #f1f1f1;
      display: flex;
      align-items: center;
    }
    .pricing-features li:last-child {
      border-bottom: none;
    }
    .pricing-features li i {
      color: #22c55e;
      margin-right: 10px;
    }
    .pricing-features li.disabled {
      color: #adb5bd;
    }
    .pricing-features li.disabled i {
      color: #adb5bd;
    }
    .btn-pricing {
      padding: 12px 30px;
      border-radius: 25px;
      font-weight: 600;
      width: 100%;
    }
    .btn-pricing-primary {
      background: var(--primary-gradient);
      border: none;
      color: white;
    }
    .btn-pricing-primary:hover {
      background: linear-gradient(135deg, #0f766e 0%, #0e7490 100%);
      color: white;
    }
    .btn-pricing-outline {
      background: transparent;
      border: 2px solid var(--secondary-teal);
      color: var(--secondary-teal);
    }
    .btn-pricing-outline:hover {
      background: var(--secondary-teal);
      color: white;
    }

    /* CTA Section */
